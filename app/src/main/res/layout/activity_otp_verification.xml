<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="8dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Back" />

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_purple"
                android:layout_marginEnd="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_purple" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Nomor Telepon"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kami telah mengirim kode OTP untuk verifikasi ke nomor:"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+628123456789"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- OTP Input Boxes -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/otpBox1"
                    style="@style/OTPBox"
                    android:text="0" />

                <TextView
                    android:id="@+id/otpBox2"
                    style="@style/OTPBox"
                    android:text="5" />

                <TextView
                    android:id="@+id/otpBox3"
                    style="@style/OTPBox"
                    android:text="" />

                <TextView
                    android:id="@+id/otpBox4"
                    style="@style/OTPBox"
                    android:text="" />

                <TextView
                    android:id="@+id/otpBox5"
                    style="@style/OTPBox"
                    android:text="" />

                <TextView
                    android:id="@+id/otpBox6"
                    style="@style/OTPBox"
                    android:text="" />

            </LinearLayout>

            <!-- Timer -->
            <TextView
                android:id="@+id/textViewTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak Menerima Kode OTP?\n00:05:18"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Verify Button -->
            <Button
                android:id="@+id/buttonVerify"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/verify"
                android:textSize="16sp"
                android:textColor="@color/text_on_primary"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_primary"
                android:elevation="4dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Number Pad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/button1"
            style="@style/NumberPadButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/NumberPadButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/NumberPadButton"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            style="@style/NumberPadButton"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/NumberPadButton"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/NumberPadButton"
            android:text="6" />

        <Button
            android:id="@+id/button7"
            style="@style/NumberPadButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/NumberPadButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/NumberPadButton"
            android:text="9" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1" />

        <Button
            android:id="@+id/button0"
            style="@style/NumberPadButton"
            android:text="0" />

        <Button
            android:id="@+id/buttonBackspace"
            style="@style/NumberPadButton"
            android:text="âŒ«" />

    </GridLayout>

</LinearLayout>
